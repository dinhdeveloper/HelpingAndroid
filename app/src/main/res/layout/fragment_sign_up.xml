<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:tools="http://schemas.android.com/tools"
    android:background="@color/white"
    android:orientation="vertical">

    <LinearLayout
        android:id="@+id/layout1"
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <LinearLayout
            android:gravity="center"
            android:layout_gravity="center"
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="50dp">
            <ImageView
                android:visibility="gone"
                android:layout_marginLeft="10dp"
                android:layout_gravity="center"
                android:padding="@dimen/dp5"
                android:src="@drawable/ic_arrow_left_white"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                app:tint="@color/black" />
            <LinearLayout
                android:gravity="center|right"
                android:layout_gravity="center"
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="match_parent">
                <LinearLayout
                    android:id="@+id/btnLogin"
                    android:orientation="vertical"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content">
                    <TextView
                        android:paddingVertical="@dimen/dp5"
                        android:paddingHorizontal="@dimen/dp10"
                        android:text="Đăng Nhập"
                        android:textColor="#9C03A0F4"
                        android:textSize="16sp"
                        android:textStyle="normal"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"/>
                </LinearLayout>

                <LinearLayout
                    android:orientation="vertical"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content">
                    <TextView
                        android:paddingVertical="@dimen/dp5"
                        android:paddingLeft="@dimen/dp10"
                        android:paddingRight="@dimen/dp20"
                        android:text="Đăng Ký"
                        android:textColor="#03A0F4"
                        android:textSize="16sp"
                        android:textStyle="bold"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"/>
                    <View
                        android:layout_marginHorizontal="@dimen/dp10"
                        android:background="@color/black"
                        android:layout_width="match_parent"
                        android:layout_height="1sp"/>
                </LinearLayout>
            </LinearLayout>
        </LinearLayout>
        <!--end toolbar-->
        <LinearLayout
            android:paddingTop="50dp"
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <LinearLayout
                android:paddingHorizontal="@dimen/dp20"
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <androidx.cardview.widget.CardView
                    app:cardCornerRadius="@dimen/dp5"
                    app:cardElevation="2dp"
                    android:layout_width="60dp"
                    android:layout_height="60dp">
                    <ImageView
                        android:id="@+id/imvAvatar"
                        android:src="@drawable/person_customer"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"/>
                </androidx.cardview.widget.CardView>
                <TextView
                    android:textSize="25sp"
                    android:textStyle="bold"
                    android:textColor="@color/color_text_admin"
                    android:paddingHorizontal="@dimen/dp20"
                    android:layout_gravity="center"
                    android:text="Nhập thông tin"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"/>
            </LinearLayout>
        </LinearLayout>
        <!--end xin chao-->

        <LinearLayout
            android:layout_marginTop="50dp"
            android:paddingHorizontal="@dimen/dp20"
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <EditText
                android:id="@+id/edtFullName"
                android:textSize="16sp"
                android:textColor="@color/black"
                android:textStyle="normal"
                android:inputType="text"
                android:imeOptions="actionNext"
                android:layout_marginVertical="@dimen/dp10"
                android:paddingHorizontal="@dimen/dp5"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:background="@color/white"
                android:gravity="start|center"
                android:hint="Họ và tên"
                android:paddingTop="@dimen/dp10"
                android:paddingBottom="@dimen/dp5"/>
            <View
                android:background="@color/color_text_info"
                android:layout_width="match_parent"
                android:layout_height="1sp"/>
        </LinearLayout>

        <LinearLayout
            android:paddingHorizontal="@dimen/dp20"
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <EditText
                android:id="@+id/edtAddress"
                android:inputType="text"
                android:imeOptions="actionNext"
                android:textSize="16sp"
                android:textColor="@color/black"
                android:textStyle="normal"
                android:layout_marginVertical="@dimen/dp10"
                android:paddingHorizontal="@dimen/dp5"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:background="@color/white"
                android:gravity="start|center"
                android:hint="Địa chỉ"
                android:paddingTop="@dimen/dp10"
                android:paddingBottom="@dimen/dp5"/>
            <View
                android:background="@color/color_text_info"
                android:layout_width="match_parent"
                android:layout_height="1sp"/>
        </LinearLayout>

        <LinearLayout
            android:paddingHorizontal="@dimen/dp20"
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <TextView
                android:id="@+id/edtSex"
                android:textSize="16sp"
                android:textColor="@color/black"
                android:textStyle="normal"
                android:inputType="number"
                android:layout_marginVertical="@dimen/dp10"
                android:paddingHorizontal="@dimen/dp5"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:background="@color/white"
                android:gravity="start|center"
                android:hint="Giới tính"
                android:paddingTop="@dimen/dp10"
                android:paddingBottom="@dimen/dp5"/>
            <View
                android:background="@color/color_text_info"
                android:layout_width="match_parent"
                android:layout_height="1sp"/>
        </LinearLayout>

        <LinearLayout
            android:paddingHorizontal="@dimen/dp20"
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

           <LinearLayout
               android:orientation="horizontal"
               android:layout_width="match_parent"
               android:layout_height="wrap_content">
               <EditText
                   android:id="@+id/edtPassword"
                   android:layout_weight="1"
                   android:textSize="16sp"
                   android:textColor="@color/black"
                   android:textStyle="normal"
                   android:inputType="textPassword"
                   android:imeOptions="actionNext"
                   android:layout_marginVertical="@dimen/dp10"
                   android:paddingHorizontal="@dimen/dp5"
                   android:layout_width="match_parent"
                   android:layout_height="wrap_content"
                   android:layout_gravity="center"
                   android:background="@color/white"
                   android:gravity="start|center"
                   android:hint="Mật khẩu"
                   android:paddingTop="@dimen/dp10"
                   android:paddingBottom="@dimen/dp5"/>

               <ImageView
                   android:id="@+id/imvVisiblePass"
                   android:paddingHorizontal="@dimen/dp10"
                   android:layout_gravity="center"
                   android:src="@drawable/ic_visible_off"
                   android:layout_width="wrap_content"
                   android:layout_height="match_parent"/>
           </LinearLayout>
            <View
                android:background="@color/color_text_info"
                android:layout_width="match_parent"
                android:layout_height="1sp"/>
        </LinearLayout>

        <LinearLayout
            android:paddingHorizontal="@dimen/dp20"
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <LinearLayout
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <EditText
                    android:id="@+id/edtRePassword"
                    android:layout_weight="1"
                    android:textSize="16sp"
                    android:textColor="@color/black"
                    android:textStyle="normal"
                    android:inputType="textPassword"
                    android:imeOptions="actionNext"
                    android:layout_marginVertical="@dimen/dp10"
                    android:paddingHorizontal="@dimen/dp5"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:background="@color/white"
                    android:gravity="start|center"
                    android:hint="Nhập lại mật khẩu"
                    android:paddingTop="@dimen/dp10"
                    android:paddingBottom="@dimen/dp5"/>
                <ImageView
                    android:id="@+id/imvVisibleRePass"
                    android:paddingHorizontal="@dimen/dp10"
                    android:layout_gravity="center"
                    android:src="@drawable/ic_visible_off"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"/>
            </LinearLayout>
            <View
                android:background="@color/color_text_info"
                android:layout_width="match_parent"
                android:layout_height="1sp"/>
        </LinearLayout>

    </LinearLayout>

    <RelativeLayout
        android:layout_alignParentBottom="true"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <LinearLayout
            android:layout_below="@+id/tvForgot"
            android:background="@color/white"
            android:layout_width="match_parent"
            android:layout_height="@dimen/dp20"/>

        <com.canhdinh.lib.roundview.RoundLinearLayout
            android:id="@+id/btnSubmit"
            android:layout_marginBottom="@dimen/dp20"
            android:layout_marginRight="@dimen/dp20"
            android:layout_alignParentRight="true"
            app:rv_backgroundColor="#EC96B7"
            app:rv_radius="@dimen/dp10"
            android:layout_width="50dp"
            android:layout_height="50dp">
            <ImageView
                android:padding="@dimen/dp10"
                android:layout_gravity="start"
                android:src="@drawable/ic_group"
                android:layout_width="match_parent"
                android:layout_height="match_parent"/>
        </com.canhdinh.lib.roundview.RoundLinearLayout>
    </RelativeLayout>


</RelativeLayout>