<?xml version="1.0" encoding="utf-8"?>
<com.canhdinh.lib.roundview.RoundLinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    app:rv_backgroundColor="@color/bg_login"
    android:orientation="vertical">

    <LinearLayout
        android:orientation="horizontal"
        android:layout_marginHorizontal="@dimen/dp5"
        android:layout_width="match_parent"
        android:layout_height="50dp">
        <ImageView
            android:id="@+id/tmvClose"
            android:padding="@dimen/dp10"
            android:src="@drawable/close"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            app:tint="@color/black" />

        <TextView
            android:text="Nhập số điện thoại"
            android:textSize="16sp"
            android:textColor="@color/black"
            android:textStyle="bold"
            android:gravity="center"
            android:layout_gravity="center"
            android:layout_weight="1"
            android:layout_width="match_parent"
            android:layout_height="match_parent"/>

        <ImageView
            android:visibility="invisible"
            android:padding="@dimen/dp10"
            android:src="@drawable/close"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            app:tint="@color/black" />
    </LinearLayout>
    <!--end toolbar-->
    <ImageView
        android:layout_marginVertical="@dimen/dp20"
        android:src="@drawable/hand"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"/>

    <TextView
        android:gravity="center"
        android:layout_gravity="center"
        android:text="Bạn sẽ nhận được một mã gồm 6 chữ số"
        android:layout_width="wrap_content"
        android:paddingHorizontal="80dp"
        android:layout_height="wrap_content"/>

    <com.canhdinh.lib.roundview.RoundLinearLayout
        android:layout_margin="@dimen/dp20"
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <LinearLayout
            android:layout_gravity="center"
            android:orientation="vertical"
            android:layout_weight="1"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <TextView
                android:paddingHorizontal="2dp"
                android:text="Nhập số điện thoại"
                android:textSize="11sp"
                android:textColor="@color/gray"
                android:textStyle="normal"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"/>

            <EditText
                android:id="@+id/edtPhoneNumber"
                android:layout_gravity="center"
                android:paddingVertical="@dimen/dp5"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@color/bg_login"
                android:inputType="phone"
                android:maxLength="12"
                android:hint="0000-000-000"/>
        </LinearLayout>
        <com.canhdinh.lib.roundview.RoundLinearLayout
            android:id="@+id/btnSubmit"
            app:rv_radius="@dimen/dp10"
            app:rv_backgroundColor="@color/color_yellow"
            android:layout_weight="2"
            android:layout_width="match_parent"
            android:layout_height="50dp">
            <TextView
                android:gravity="center"
                android:layout_gravity="center"
                android:textStyle="bold"
                android:textColor="@color/black"
                android:textSize="16sp"
                android:text="Tiếp tục"
                android:layout_width="match_parent"
                android:layout_height="match_parent"/>
        </com.canhdinh.lib.roundview.RoundLinearLayout>
    </com.canhdinh.lib.roundview.RoundLinearLayout>


</com.canhdinh.lib.roundview.RoundLinearLayout>