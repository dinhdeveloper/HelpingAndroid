<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:background="@color/white"
    android:orientation="vertical">


    <LinearLayout
        android:orientation="horizontal"
        android:weightSum="3"
        android:layout_width="match_parent"
        android:layout_height="250dp">
        <LinearLayout
            android:gravity="center"
            android:layout_gravity="center"
            android:layout_marginRight="2.5dp"
            android:layout_marginLeft="@dimen/dp5"
            android:layout_marginVertical="@dimen/dp5"
            android:layout_weight="2"
            android:layout_width="0dp"
            android:layout_height="match_parent">
            <androidx.cardview.widget.CardView
                app:cardCornerRadius="@dimen/dp5"
                android:layout_gravity="center"
                android:layout_width="match_parent"
                android:layout_height="match_parent">
                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent">
                    <ImageView
                        android:id="@+id/cvItem1"
                        android:layout_gravity="center"
                        android:scaleType="fitXY"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"/>

                    <com.canhdinh.lib.roundview.RoundTextView
                        android:id="@+id/tvPriceSale1"
                        android:fontFamily="@font/rambla_regular"
                        android:textSize="12sp"
                        android:layout_alignBottom="@+id/cvItem1"
                        android:layout_margin="@dimen/dp5"
                        android:textColor="@color/black"
                        app:rv_backgroundColor="@color/white"
                        app:rv_radius="2sp"
                        tools:text="64.000đ"
                        android:paddingHorizontal="8dp"
                        android:paddingVertical="2sp"
                        android:elevation="@dimen/dp5"
                        android:gravity="center"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"/>
                </RelativeLayout>
            </androidx.cardview.widget.CardView>
        </LinearLayout>

        <LinearLayout
            android:layout_marginLeft="2.5dp"
            android:layout_marginVertical="@dimen/dp5"
            android:layout_marginRight="@dimen/dp5"
            android:orientation="vertical"
            android:layout_weight="1"
            android:layout_width="0dp"
            android:layout_height="match_parent">
            <androidx.cardview.widget.CardView
                app:cardCornerRadius="@dimen/dp5"
                android:layout_marginBottom="2.5dp"
                android:layout_weight="1"
                android:layout_width="match_parent"
                android:layout_height="match_parent">
                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent">
                    <ImageView
                        android:id="@+id/cvItem2"
                        android:layout_gravity="center"
                        android:scaleType="fitXY"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"/>

                    <com.canhdinh.lib.roundview.RoundTextView
                        android:id="@+id/tvPriceSale2"
                        android:fontFamily="@font/rambla_regular"
                        android:textSize="12sp"
                        android:layout_alignBottom="@+id/cvItem2"
                        android:layout_margin="@dimen/dp5"
                        android:textColor="@color/black"
                        app:rv_backgroundColor="@color/white"

                        app:rv_radius="2sp"
                        tools:text="64.000đ"
                        android:paddingHorizontal="8dp"
                        android:paddingVertical="2sp"
                        android:elevation="@dimen/dp5"
                        android:gravity="center"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"/>
                </RelativeLayout>
            </androidx.cardview.widget.CardView>
            <androidx.cardview.widget.CardView
                app:cardCornerRadius="@dimen/dp5"
                android:layout_marginTop="2.5dp"
                android:layout_weight="1"
                android:layout_width="match_parent"
                android:layout_height="match_parent">
                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent">
                    <ImageView
                        android:id="@+id/cvItem3"
                        android:layout_gravity="center"
                        android:scaleType="fitXY"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"/>

                    <com.canhdinh.lib.roundview.RoundTextView
                        android:id="@+id/tvPriceSale3"
                        android:fontFamily="@font/rambla_regular"
                        android:textSize="12sp"
                        android:layout_alignBottom="@+id/cvItem3"
                        android:layout_margin="@dimen/dp5"
                        android:textColor="@color/black"
                        app:rv_backgroundColor="@color/white"

                        app:rv_radius="2sp"
                        tools:text="64.000đ"
                        android:paddingHorizontal="8dp"
                        android:paddingVertical="2sp"
                        android:elevation="@dimen/dp5"
                        android:gravity="center"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"/>
                </RelativeLayout>
            </androidx.cardview.widget.CardView>
        </LinearLayout>
    </LinearLayout>

    <LinearLayout
        android:weightSum="3"
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="115dp">
        <androidx.cardview.widget.CardView
            app:cardCornerRadius="@dimen/dp5"
            android:layout_marginLeft="@dimen/dp5"
            android:layout_marginRight="2.5dp"
            android:layout_weight="1"
            android:layout_width="0dp"
            android:layout_height="match_parent">
            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent">
                <ImageView
                    android:id="@+id/cvItem4"
                    android:layout_gravity="center"
                    android:scaleType="fitXY"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"/>

                <com.canhdinh.lib.roundview.RoundTextView
                    android:id="@+id/tvPriceSale4"
                    android:fontFamily="@font/rambla_regular"
                    android:textSize="12sp"
                    android:layout_alignBottom="@+id/cvItem4"
                    android:layout_margin="@dimen/dp5"
                    android:textColor="@color/black"
                    app:rv_backgroundColor="@color/white"

                    app:rv_radius="2sp"
                    tools:text="64.000đ"
                    android:paddingHorizontal="8dp"
                    android:paddingVertical="2sp"
                    android:elevation="@dimen/dp5"
                    android:gravity="center"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"/>
            </RelativeLayout>
        </androidx.cardview.widget.CardView>
        <androidx.cardview.widget.CardView
            app:cardCornerRadius="@dimen/dp5"
            android:layout_marginHorizontal="2.5dp"
            android:layout_weight="1"
            android:layout_width="0dp"
            android:layout_height="match_parent">
            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent">
                <ImageView
                    android:id="@+id/cvItem5"
                    android:layout_gravity="center"
                    android:scaleType="fitXY"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"/>

                <com.canhdinh.lib.roundview.RoundTextView
                    android:id="@+id/tvPriceSale5"
                    android:fontFamily="@font/rambla_regular"
                    android:textSize="12sp"
                    android:layout_alignBottom="@+id/cvItem5"
                    android:layout_margin="@dimen/dp5"
                    android:textColor="@color/black"
                    app:rv_backgroundColor="@color/white"

                    app:rv_radius="2sp"
                    tools:text="64.000đ"
                    android:paddingHorizontal="8dp"
                    android:paddingVertical="2sp"
                    android:elevation="@dimen/dp5"
                    android:gravity="center"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"/>
            </RelativeLayout>
        </androidx.cardview.widget.CardView>
        <androidx.cardview.widget.CardView
            app:cardCornerRadius="@dimen/dp5"
            android:layout_marginRight="@dimen/dp5"
            android:layout_marginLeft="2.5dp"
            android:layout_weight="1"
            android:layout_width="0dp"
            android:layout_height="match_parent">
            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent">
                <ImageView
                    android:id="@+id/cvItem6"
                    android:layout_gravity="center"
                    android:scaleType="fitXY"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"/>

                <com.canhdinh.lib.roundview.RoundTextView
                    android:id="@+id/tvPriceSale6"
                    android:fontFamily="@font/rambla_regular"
                    android:textSize="12sp"
                    android:layout_alignBottom="@+id/cvItem6"
                    android:layout_margin="@dimen/dp5"
                    android:textColor="@color/black"
                    app:rv_backgroundColor="@color/white"

                    app:rv_radius="2sp"
                    tools:text="64.000đ"
                    android:paddingHorizontal="8dp"
                    android:paddingVertical="2sp"
                    android:elevation="@dimen/dp5"
                    android:gravity="center"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"/>
            </RelativeLayout>
        </androidx.cardview.widget.CardView>
    </LinearLayout>

</LinearLayout>