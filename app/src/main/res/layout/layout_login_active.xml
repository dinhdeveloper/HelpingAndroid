<?xml version="1.0" encoding="utf-8"?>
<com.canhdinh.lib.roundview.RoundLinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    app:rv_backgroundColor="@color/colorPrimary"
    android:visibility="gone"
    tools:visibility="visible"
    android:orientation="vertical">

    <include layout="@layout/layout_header"/>

    <com.canhdinh.lib.roundview.RoundRelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <com.canhdinh.lib.roundview.RoundLinearLayout
            android:layout_marginTop="60dp"
            app:rv_backgroundColor="@color/white"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            app:rv_radius_top_right="25dp"
            android:paddingTop="50dp"
            android:orientation="vertical"
            app:rv_radius_top_left="25dp">
            <TextView
                android:paddingVertical="@dimen/dp5"
                android:id="@+id/tvName"
                android:gravity="center"
                android:textColor="@color/black"
                tools:text="Tran canh dinh"
                android:textSize="22sp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"/>

            <TextView
                android:id="@+id/tvLocation"
                android:gravity="center"
                android:textColor="@color/color_text_admin"
                tools:text="Ho Chi Minh"
                android:textSize="16sp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"/>

            <View
                android:layout_marginVertical="@dimen/dp10"
                android:background="@color/color_disible"
                android:layout_width="match_parent"
                android:layout_height="2sp"/>
            <TextView
                android:layout_marginHorizontal="@dimen/dp10"
                android:textStyle="bold"
                android:text="Sản phẩm của bạn"
                android:textSize="20sp"
                android:textColor="@color/black"
                android:paddingVertical="@dimen/dp5"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"/>

            <androidx.recyclerview.widget.RecyclerView
                android:id="@+id/rcListProductByCus"
                android:layout_margin="@dimen/dp10"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                tools:listitem="@layout/custom_item_customer"/>
        </com.canhdinh.lib.roundview.RoundLinearLayout>

        <androidx.cardview.widget.CardView
            android:layout_marginTop="@dimen/dp10"
            app:cardCornerRadius="@dimen/dp5"
            android:layout_centerHorizontal="true"
            android:layout_width="100dp"
            android:layout_height="100dp">
            <ImageView
                android:id="@+id/imvProfile"
                android:src="@drawable/person_customer"
                android:layout_width="match_parent"
                android:layout_height="match_parent"/>
        </androidx.cardview.widget.CardView>

    </com.canhdinh.lib.roundview.RoundRelativeLayout>


</com.canhdinh.lib.roundview.RoundLinearLayout>