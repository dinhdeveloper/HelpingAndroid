<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    app:cardCornerRadius="@dimen/dp20"
    android:elevation="3dp"
    android:layout_margin="30dp"
    xmlns:app="http://schemas.android.com/apk/res-auto">

        <LinearLayout
            android:background="@color/bg_"
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
           <TextView
               android:text="Thông tin chi tiết"
               android:layout_gravity="center"
               android:gravity="center"
               android:textSize="20sp"
               android:textColor="@color/white"
               android:textStyle="normal"
               android:fontFamily="@font/gotu_regular"
               android:background="@color/color_main"
               android:layout_width="match_parent"
               android:layout_height="60dp"/>
            <LinearLayout
                android:layout_marginHorizontal="30dp"
                android:weightSum="3"
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <LinearLayout
                    android:paddingVertical="@dimen/dp15"
                    android:orientation="vertical"
                    android:layout_weight="1"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content">
                    <ImageView
                        android:src="@drawable/ic_newspaper_1"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"/>
                    <TextView
                        android:layout_marginTop="@dimen/dp10"
                        android:maxLines="2"
                        android:gravity="center"
                        android:layout_gravity="center"
                        android:text="Sản phẩm của bạn"
                        android:textSize="14sp"
                        android:textColor="@color/black"
                        android:textStyle="normal"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"/>
                </LinearLayout>
                <!--end item-->

                <LinearLayout
                    android:paddingVertical="@dimen/dp15"
                    android:orientation="vertical"
                    android:layout_weight="1"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content">
                    <ImageView
                        android:src="@drawable/ic_follow_1"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"/>
                    <TextView
                        android:layout_marginTop="@dimen/dp10"
                        android:maxLines="2"
                        android:gravity="center"
                        android:layout_gravity="center"
                        android:text="Số người theo dõi"
                        android:textSize="14sp"
                        android:textColor="@color/black"
                        android:textStyle="normal"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"/>
                </LinearLayout>
                <!--end item-->

                <LinearLayout
                    android:paddingVertical="@dimen/dp15"
                    android:orientation="vertical"
                    android:layout_weight="1"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content">
                    <ImageView
                        android:src="@drawable/ic_target_1"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"/>
                    <TextView
                        android:layout_marginTop="@dimen/dp10"
                        android:maxLines="2"
                        android:gravity="center"
                        android:layout_gravity="center"
                        android:text="Nhiệm vụ hàng ngày"
                        android:textSize="14sp"
                        android:textColor="@color/black"
                        android:textStyle="normal"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"/>
                </LinearLayout>
                <!--end item-->
            </LinearLayout>
        </LinearLayout>

</androidx.cardview.widget.CardView>