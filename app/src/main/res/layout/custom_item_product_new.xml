<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:id="@+id/layout_item"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_marginVertical="@dimen/dp10"
    android:layout_marginHorizontal="@dimen/dp5"
    app:cardCornerRadius="@dimen/dp5"
    android:orientation="vertical"
    app:cardPreventCornerOverlap="false">

    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="120dp">

            <ImageView
                android:id="@+id/imvCategory"
                android:scaleType="centerCrop"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:src="@drawable/no_image_full" />

            <ProgressBar
                android:id="@+id/progressBar"
                android:layout_width="35dp"
                android:layout_height="35dp"
                android:layout_centerInParent="true" />


        </RelativeLayout>

        <LinearLayout
            android:layout_margin="@dimen/dp10"
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <TextView
                android:id="@+id/tvName"
                android:fontFamily="@font/rambla_regular"
                android:layout_gravity="center"
                android:gravity="start|center"
                android:maxLines="1"
                android:ellipsize="end"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:padding="@dimen/dp5"
                android:textColor="@color/color_text_admin"
                android:textSize="15sp"
                android:textStyle="normal"
                tools:text="Nước hoa nồng nặc ơi là nồng nặc" />

            <TextView
                android:id="@+id/tvTimes"
                android:fontFamily="@font/gotu_regular"
                android:drawablePadding="5dp"
                android:drawableLeft="@drawable/ic_time"
                android:drawableTint="@color/color_green"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:paddingHorizontal="@dimen/dp5"
                android:textColor="@color/color_text_info"
                android:textSize="13sp"
                android:textStyle="normal"
                android:maxLines="1"
                android:ellipsize="end"
                tools:text="Hồ Chí Minh" />

            <TextView
                android:id="@+id/tvPrice"
                android:fontFamily="@font/gotu_regular"
                android:drawableLeft="@drawable/ic_bank"
                android:drawablePadding="5dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:paddingHorizontal="@dimen/dp5"
                android:textColor="@color/color_orange"
                android:textSize="14sp"
                android:maxLines="1"
                android:textStyle="bold"
                tools:text="520.000 VNĐ" />

            <TextView
                android:id="@+id/tvLocation"
                android:fontFamily="@font/gotu_regular"
                android:drawableLeft="@drawable/ic_dinh_location"
                android:drawablePadding="5dp"
                android:drawableTint="@color/color_green"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:paddingHorizontal="@dimen/dp5"
                android:textColor="@color/color_view"
                android:textSize="13sp"
                android:textStyle="normal"
                android:maxLines="1"
                android:ellipsize="end"
                tools:text="Hồ Chí Minh" />
        </LinearLayout>
    </LinearLayout>
</androidx.cardview.widget.CardView>