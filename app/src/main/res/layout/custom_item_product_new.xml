<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="120dp">

        <com.canhdinh.lib.labelview.LabelImageView
            app:label_backgroundColor="#C2185B"
            app:label_orientation="RIGHT_TOP"
            app:label_text="Mới 90%"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:src="@drawable/no_image_full" />

        <ProgressBar
            android:layout_width="35dp"
            android:layout_height="35dp"
            android:layout_centerInParent="true" />


    </RelativeLayout>

    <LinearLayout
        android:layout_margin="@dimen/dp10"
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <TextView
            android:maxLines="1"
            android:ellipsize="end"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="@dimen/dp5"
            android:textColor="@color/color_text_admin"
            android:textSize="16sp"
            android:textStyle="bold"
            tools:text="Nước hoa nồng nặc ơi là nồng nặc" />

        <TextView
            android:drawableLeft="@drawable/ic_dinh_cash"
            android:drawablePadding="@dimen/dp10"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="@dimen/dp5"
            android:textColor="@color/color_orange"
            android:textSize="16sp"
            android:textStyle="bold"
            tools:text="520.000 VNĐ" />

        <TextView
            android:drawableLeft="@drawable/ic_dinh_location"
            android:drawablePadding="@dimen/dp10"
            android:drawableTint="@color/color_green"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="@dimen/dp5"
            android:textColor="@color/color_orange"
            android:textSize="16sp"
            android:textStyle="bold"
            tools:text="Hồ Chí Minh" />
    </LinearLayout>
</LinearLayout>